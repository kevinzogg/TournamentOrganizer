<Window x:Class="TournamentOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tournament Organizer" Height="350" Width="525">
    <Grid>
        <Menu HorizontalAlignment="Stretch" Height="18" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Name="file" Header="File">
                <MenuItem Name="new" Header="New Tournament" Click="CreateNewTournament"></MenuItem>
            </MenuItem>
            <MenuItem Name="view" Header="View"></MenuItem>
        </Menu>
        <Grid Name="ContentArea" HorizontalAlignment="Stretch" Margin="0,18,0,0" VerticalAlignment="Stretch" >
            
        </Grid>
    </Grid>
</Window>
